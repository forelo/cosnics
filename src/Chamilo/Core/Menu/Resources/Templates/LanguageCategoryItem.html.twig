{% block LanguageCategory %}
    <!--[if lte IE 6]></td></tr></table></a><![endif]-->
    <li class="dropdown" style="width: 100%">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">
            <img class="chamilo-menu-item-icon {% if SHOWTITLE %} chamilo-menu-item-image-with-label {% endif %}"
                 src="{{ IMAGE|raw }}" title="{{ TITLE }}" alt="{{ TITLE }}"/>
            <div class="chamilo-menu-item-label-with-image">
                {{ CURRENTLANGUAGE }}
                <span class="caret"></span>
            </div>
        </a>
        <ul class="dropdown-menu language-selector">
            {% for LANG in LANGUAGES %}
                <li {% if LANG.SELECTED %} class="active" {% endif %}>
                    <a href="{{ LANG.URL }}">
                        <div class="chamilo-menu-item-label">
                            {{ LANG.LANGUAGE }}
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endblock %}