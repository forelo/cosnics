{% set appContext = 'Chamilo\\Libraries\\Architecture\\Application' %}
{% block header %}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ BASE_LANGUAGECODE|raw }}" lang="{{ BASE_LANGUAGECODE|raw }}">
<head>{{ BASE_HEADERS|raw }}</head>
<body dir="{{ BASE_TEXT_DIRECTION|raw }}">
<div style="position:absolute;">
{{ BASE_BANNER|raw }}
</div>
<div class="{{ BASE_VIEWMODECLASS|raw }}" style="position: relative; margin-left: 100px;">
    {{ BREADCRUMB|raw }}
    {% if APP_FULLPAGE %}
    <div class="row">
        {% if APP_HASLEFTMENU %}
        <div class="col-xs-12 col-md-4 col-lg-3">
            {{ APP_LEFTMENU|raw }}
        </div>
        <div class="col-xs-12 col-md-8 col-lg-9">
            {% else %}
            <div class="col-xs-12">
                {% endif %}
                {% if APP_PAGE_TITLE %}
                    <h3 id="page-title">{{ APP_PAGE_TITLE|raw }}</h3>
                {% endif %}
                {% if APP_SHORTCUT_MENU %}
                    <div class="col-md-12" style="position: fixed; top: 78px; right: 0; z-index: 10000;">
                    {{ APP_SHORTCUT_MENU|raw }}
                    </div>
                {% endif %}
                <div class="clearfix"></div>
                {% endif %}
                {{ APP_MESSAGES|raw }}
                {{ APP_NOTIFICATION_MESSAGE|raw }}
                {{ APP_DISPLAY_MESSAGE|raw }}
                {{ APP_DISPLAY_ERROR_MESSAGE|raw }}
                {{ APP_DISPLAY_WARNING_MESSAGE|raw }}
{% endblock %}
{% block footer %}
                {% if APP_FULLPAGE %}
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
        {% endif %}
</div> <!-- end of .container-fluid" -->
<footer class="chamilo-footer" style="z-index: -10;">
    <div class="{{ BASEFOOTER_VIEWMODECLASS|raw }}">
        <div class="row footer">
            <div class="col-xs-12">
                <a href="{{ FOOTER_INSTITUTIONURL|raw }}" target="about:blank">{{ FOOTER_INSTITUTION|raw }}</a> |
                {% if FOOTER_MANAGERCONTACTWEBSITE %}
                    {{ FOOTER_MANAGERCONTACTWEBSITE|raw }} |
                {% elseif FOOTER_MANAGERPREFIX %}
                    {{ FOOTER_MANAGERPREFIX|raw }} |
                {% endif %}
                {% if FOOTER_VERSION %}
                    {{ FOOTER_VERSION|raw }} |
                {% endif %}
                <a href="{{ FOOTER_WHOISONLINEURL|raw }}">{{ FOOTER_WHOISONLINE|raw }}</a>
                &copy; {{ "now"|date("Y") }}
            </div>
        </div>
    </div>
</footer>
</body>
</html>

{% endblock %}